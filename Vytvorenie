CREATE DATABASE Herny_magazin;
USE Herny_magazin;

CREATE TABLE `Hry`(
`id` int AUTO_INCREMENT,
PRIMARY KEY(id),
`meno` VARCHAR(60),
`zaner` VARCHAR(40),
`datum_vydania` DATE,
`recenzia` TEXT,
`vyvojar` VARCHAR(60),
`vydavatel` VARCHAR(60),
`podpora_jazykov` TEXT,
`cena` FLOAT,
`systemove_poziadavky` TEXT,
`informacie`TEXT,
KEY (zaner),
KEY(vyvojar),
KEY(vydavatel),
KEY(recenzia)
);



CREATE TABLE `spravca`(
`id` INT AUTO_INCREMENT,
PRIMARY KEY(id),
`meno` VARCHAR(20)
);


CREATE TABLE Zaregistrovany_uzivatel (
id INT PRIMARY KEY AUTO_INCREMENT,
email VARCHAR(40),
username VARCHAR(20),
heslo VARCHAR(40)
);

CREATE TABLE `zaner`(
`ID` INT PRIMARY KEY AUTO_INCREMENT,
`typ_zanru` VARCHAR(50),
);
