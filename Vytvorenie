`koment` TEXT,
);


CREATE TABLE `vyvojar`(
`id` INT AUTO_INCREMENT,
PRIMARY KEY(id),
`vyvojar` VARCHAR(60),
);



CREATE TABLE `vydavatelstvo`(
`id` INT AUTO_INCREMENT,
PRIMARY KEY(id),
`vydavatelstvo` VARCHAR(60),
);


CREATE TABLE `Recenzie`(
`id_recenzia`INT AUTO_INCREMENT,
PRIMARY KEY(id_recenzia),
`id_zaregistrovaneho_u`INT AUTO_INCREMENT,
`id_Hry`INT AUTO_INCREMENT,
`koment` TEXT
  
);


CREATE TABLE `spravca_info`(
`id`INT PRIMARY KEY AUTO_INCREMENT,
`realne_meno` VARCHAR,
`realne_priezvisko` VARCHAR,
`Adresa` TEXT,
`email` VARCHAR,
);

